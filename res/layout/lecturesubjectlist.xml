<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:paddingBottom="20dp"
    android:paddingTop="20dp" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="4"
            android:paddingRight="150dp" />

        <Button
            android:id="@+id/attendanceButton"
            android:background="@drawable/qr"
            android:layout_gravity="right"
            android:layout_width="120px"
            android:layout_height="120px"
            android:onClick="attendanceButtonClick"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/viewAttendanceButton"
			android:background="@drawable/clipboard"
			android:layout_gravity="right"
            android:layout_width="120px"
            android:layout_height="120px"
            android:onClick="rosterButtonClick"
            android:layout_weight="1"/>
        
        <Button
            android:id="@+id/viewA"
            android:background="@drawable/schedule"
            android:layout_gravity="right"
            android:layout_width="120px"
            android:layout_height="120px"
            android:onClick="viewAttendance"
            android:layout_weight="1"/>
		
    </TableRow>

</RelativeLayout>