<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradientbg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StudentActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/StudentLogoutButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/cross"
            android:onClick="Logout" />

        <Button
            android:id="@+id/viewAttendanceButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/qr"
            android:onClick="attendClass" />

        <Button
            android:id="@+id/addSubjects"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="right"
            android:background="@drawable/plus"
            android:onClick="addSubjects"
            android:layout_marginLeft="250px"/>

    </LinearLayout>

    <TableRow
        android:id="@+id/subjectRow0"
        android:layout_weight="3"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/EnrolledSubject0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="TextView" />

        <Button
            android:id="@+id/removeSubject1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:onClick="removeSubject"
            android:text="-" />

        <Button
            android:id="@+id/modifySubject1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:onClick="modifySubject"
            android:text="M" />
    </TableRow>

    <TableRow
        android:id="@+id/subjectRow1"
        android:layout_weight="3"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/EnrolledSubject1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />

        <Button
            android:id="@+id/removeSubject2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:onClick="removeSubject"
            android:text="-" />

        <Button
            android:id="@+id/modifySubject2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:onClick="modifySubject"
            android:text="M" />
    </TableRow>

    <TableRow
        android:id="@+id/subjectRow2"
        android:layout_weight="3"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/EnrolledSubject2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />

        <Button
            android:id="@+id/removeSubject3"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:onClick="removeSubject"
            android:text="-" />

        <Button
            android:id="@+id/modifySubject3"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:onClick="modifySubject"
            android:text="M" />
    </TableRow>

    <TableRow
        android:id="@+id/subjectRow3"
        android:layout_weight="3"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/EnrolledSubject3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />

        <Button
            android:id="@+id/removeSubject4"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:onClick="removeSubject"
            android:text="-" />

        <Button
            android:id="@+id/modifySubject4"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:onClick="modifySubject"
            android:text="M" />
    </TableRow>

    <TableRow android:layout_weight="1" >

        <Button
            android:id="@+id/manageSubject_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showTimeTable"
            android:text="showTimeTable" />

        <Button
            android:id="@+id/button1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="attendClass"
            android:text="Attend Class" />
    </TableRow>

</TableLayout>