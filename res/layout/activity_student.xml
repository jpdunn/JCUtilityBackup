<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StudentActivity" >

    <TableRow
        android:layout_weight="1"
        android:paddingLeft="140dp" >

        <Button
            android:id="@+id/addSubjects"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:onClick="addSubjects"
            android:text="+" />
    </TableRow>

    <TableRow
        android:id="@+id/subjectRow0"
        android:layout_weight="3"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/EnrolledSubject0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="TextView" />

        <Button
            android:id="@+id/removeSubject1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:onClick="removeSubject"
            android:text="-" />
    </TableRow>

    <TableRow
        android:id="@+id/subjectRow1"
        android:layout_weight="3"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/EnrolledSubject1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />

        <Button
            android:id="@+id/removeSubject2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:onClick="removeSubject"
            android:text="-" />
    </TableRow>

    <TableRow
        android:id="@+id/subjectRow2"
        android:layout_weight="3"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/EnrolledSubject2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />

        <Button
            android:id="@+id/removeSubject3"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:onClick="removeSubject"
            android:text="-" />
    </TableRow>

    <TableRow
        android:id="@+id/subjectRow3"
        android:layout_weight="3"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/EnrolledSubject3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />

        <Button
            android:id="@+id/removeSubject4"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:onClick="removeSubject"
            android:text="-" />
    </TableRow>

    <TableRow android:layout_weight="1" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showTimeTable"
            android:text="showTimeTable" />
    </TableRow>

</TableLayout>